<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GuyOllamaAI.ViewModels"
        x:Class="GuyOllamaAI.Views.SplashWindow"
        x:DataType="vm:SplashViewModel"
        Title="GuyOllamaAI"
        Width="550" Height="580"
        MinWidth="400" MinHeight="450"
        WindowStartupLocation="CenterScreen"
        CanResize="True"
        Background="{DynamicResource BackgroundBrush}">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled">
        <Grid RowDefinitions="*, Auto" MinHeight="540">
            <!-- Main Content -->
            <StackPanel Grid.Row="0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="16"
                        Margin="20">

                <!-- Logo Animation Container -->
                <Border Name="LogoContainer"
                        HorizontalAlignment="Center"
                        Width="80" Height="80"
                        CornerRadius="18"
                        Background="{DynamicResource PrimaryBrush}"
                        Opacity="{Binding LogoOpacity}">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="{Binding LogoScale}" ScaleY="{Binding LogoScale}" />
                    </Border.RenderTransform>
                    <TextBlock Text="G"
                               FontSize="44"
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>

                <!-- App Name with Animation -->
                <StackPanel HorizontalAlignment="Center" Spacing="4">
                    <TextBlock Text="GuyOllamaAI"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center"
                               Opacity="{Binding TitleOpacity}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="{Binding TitleOffset}" />
                        </TextBlock.RenderTransform>
                    </TextBlock>

                    <TextBlock Text="Your Local AI Assistant"
                               FontSize="14"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               HorizontalAlignment="Center"
                               Opacity="{Binding SubtitleOpacity}">
                        <TextBlock.RenderTransform>
                            <TranslateTransform Y="{Binding SubtitleOffset}" />
                        </TextBlock.RenderTransform>
                    </TextBlock>
                </StackPanel>

                <!-- Introduction Text -->
                <Border Background="{DynamicResource SurfaceBrush}"
                        CornerRadius="12"
                        Padding="20,16"
                        MaxWidth="420"
                        Opacity="{Binding InfoOpacity}">
                    <Border.RenderTransform>
                        <TranslateTransform Y="{Binding InfoOffset}" />
                    </Border.RenderTransform>
                    <StackPanel Spacing="10">
                        <TextBlock Text="Welcome!"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   HorizontalAlignment="Center" />

                        <TextBlock TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="13"
                                   LineHeight="20"
                                   Foreground="{DynamicResource TextSecondaryBrush}">
                            GuyOllamaAI connects directly to your local Ollama server.
                        </TextBlock>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Spacing="8"
                                    Margin="0,4">
                            <TextBlock Text="No API keys" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource SuccessBrush}" />
                            <TextBlock Text="|" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBlock Text="No tokens" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource SuccessBrush}" />
                            <TextBlock Text="|" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBlock Text="No payment" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource SuccessBrush}" />
                        </StackPanel>

                        <TextBlock TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   FontSize="13"
                                   LineHeight="20"
                                   Foreground="{DynamicResource TextSecondaryBrush}">
                            Everything runs locally on your machine for complete privacy and control.
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Continue Button -->
                <Button Content="Get Started"
                        Classes="primary"
                        HorizontalAlignment="Center"
                        Padding="32,12"
                        FontSize="15"
                        Margin="0,8,0,0"
                        Command="{Binding ContinueCommand}"
                        Opacity="{Binding ButtonOpacity}">
                    <Button.RenderTransform>
                        <TranslateTransform Y="{Binding ButtonOffset}" />
                    </Button.RenderTransform>
                </Button>
            </StackPanel>

            <!-- Version Info -->
            <TextBlock Grid.Row="1"
                       Text="Version 1.0.0"
                       Classes="caption"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12"
                       Opacity="{Binding ButtonOpacity}" />
        </Grid>
    </ScrollViewer>
</Window>
